<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Update User</title>
</head>

<body>
    <div class="topnav" style="margin-bottom: 20px;">
        <a href="/">Home</a>
        <a href="/create">Create-user</a>
    </div>
    <div class="form">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend>Update a user</legend>
                <label class="d-none">Id:</label>
                <input type="hidden" name="userId" value="<%= user.id %>"><br><br>
                <label>Email:</label>
                <input type="email" name="email" value="<%= user.email %>"><br><br>
                <label>Name</label>
                <input type="text" name="username" value="<%= user.name %>"><br><br>
                <label>City</label>
                <input type="text" name="city" value="<%= user.city %>"><br><br>
                <button type="submit">Save</button>
            </fieldset>
        </form>
    </div>
</body>

</html>